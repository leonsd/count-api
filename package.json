{
  "name": "ton-api",
  "version": "1.0.0",
  "description": "Count number of accesses to the site Ton.",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "npm run local-server",
    "deploy:dev": "npm run build && sls deploy -s dev",
    "deploy:prod": "npm run build && sls deploy -s prod",
    "lint": "eslint --ext .js,.ts .",
    "local-server": "sls offline start -s local",
    "migrate": "npx dotenv-run-script .env.local typeorm migration:run -- -d src/config/database/data-source.ts",
    "migrate:dev": "npx dotenv-run-script .env.dev typeorm migration:run -- -d src/config/database/data-source.ts",
    "migrate:prod": "npx dotenv-run-script .env.dev typeorm migration:run -- -d src/config/database/data-source.ts",
    "revert-migration": "npx dotenv-run-script .env.local typeorm migration:revert -- -d src/config/database/data-source.ts",
    "revert-migration:dev": "npx dotenv-run-script .env.dev typeorm migration:revert -- -d src/config/database/data-source.ts",
    "revert-migration:prod": "npx dotenv-run-script .env.prod typeorm migration:revert -- -d src/config/database/data-source.ts",
    "prepare-husky": "husky install",
    "typeorm": "npx typeorm-ts-node-esm",
    "jest": "jest",
    "test": "npx dotenv-run-script .env.local jest -- --collectCoverage",
    "test:watch": "npx dotenv-run-script .env.local jest -- --collectCoverage --watch",
    "test:watchAll": "npx dotenv-run-script .env.local jest -- --collectCoverage --watchAll",
    "watch": "tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@middy/core": "^4.5.2",
    "@middy/http-event-normalizer": "^4.5.2",
    "@middy/http-json-body-parser": "^4.5.2",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "countapi-js": "^1.0.2",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.4.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/aws-lambda": "^8.10.119",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-run-script": "^0.3.0",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
